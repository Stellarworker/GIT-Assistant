<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_details_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/common_padding_horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/user_details_activity_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_top" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/user_details_activity_text_margin_start"
        android:layout_marginTop="@dimen/common_margin_top"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_details_activity_uid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/user_details_activity_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_details_activity_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/user_details_activity_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_details_activity_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/user_details_activity_text_size" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>